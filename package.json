{
  "name": "tsMCP",
  "version": "1.0.0",
  "description": "Boilerplate for creating MCP servers and clients in TypeScript",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && chmod 755 build/server.js",
    "start:server": "node build/server.js",
    "start:client": "node build/client.js",
    "dev:server": "tsc && node build/server.js",
    "dev:client": "tsc && node build/client.js",
    "quickstart": "tsc && node build/quickstart.js",
    "clean": "rm -rf build"
  },
  "keywords": ["mcp", "model-context-protocol", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
